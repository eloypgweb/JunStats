---
// Componente de menú hamburguesa para móviles
import ThemeToggle from './ThemeToggle.astro';
import LanguageToggle from './LanguageToggle.astro';
import '../styles/HamburgerMenu.css';
---

<div class="hamburger-container">
	<!-- Botón hamburguesa -->
	<button 
		id="hamburger-btn"
		class="hamburger-btn"
		type="button"
		aria-label="Abrir menú"
		aria-expanded="false"
		aria-controls="mobile-sidebar"
	>
		<span class="hamburger-line"></span>
		<span class="hamburger-line"></span>
		<span class="hamburger-line"></span>
	</button>

	<!-- Overlay para cerrar el menú -->
	<div id="sidebar-overlay" class="sidebar-overlay"></div>

	<!-- Sidebar -->
	<nav id="mobile-sidebar" class="mobile-sidebar" aria-hidden="true">
		<div class="sidebar-content">
			<div class="sidebar-header">
				<h3>Opciones</h3>
				<button 
					id="close-sidebar"
					class="close-btn"
					type="button"
					aria-label="Cerrar menú"
				>
					✕
				</button>
			</div>

			<div class="sidebar-section">
				<h4>Navegación</h4>
				<div class="nav-links-sidebar">
					<a href="/" class="sidebar-nav-link">Inicio</a>
					<a href="/jornadas" class="sidebar-nav-link has-notification">
						Jornadas
						<span class="notification-dot" aria-label="Nueva jornada disponible"></span>
					</a>
					<a href="/partidos" class="sidebar-nav-link">Partidos</a>
					<a href="/jugadas" class="sidebar-nav-link">Jugadas</a>
					<a href="/galeria" class="sidebar-nav-link has-notification">
						Galería
						<span class="notification-dot" aria-label="Nuevas fotos disponibles"></span>
					</a>
				</div>
			</div>

			<div class="sidebar-section">
				<h4>Tema</h4>
				<ThemeToggle />
			</div>

			<div class="sidebar-section">
				<h4>Idioma</h4>
				<LanguageToggle />
			</div>

			<div class="sidebar-section">
				<h4>Redes Sociales</h4>
