---
import { Image } from 'astro:assets';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';
import totaltemporada from '../../assets/totaltemporada.png';
import jornadas from '../../data/jornadas.json';

// Importar las im치genes din치micamente
import presJ1 from '../../assets/jornadas/presJ1.png';
import presJ2 from '../../assets/jornadas/presJ2.png';

// Mapear las im치genes
const imageMap: Record<string, any> = {
	'/src/assets/jornadas/presJ1.png': presJ1,
	'/src/assets/jornadas/presJ2.png': presJ2,
};

// Ordenar jornadas por fecha (m치s recientes primero)
const sortedJornadas = jornadas
	.map(jornada => ({
		...jornada,
		pubDate: new Date(jornada.pubDate),
		heroImage: imageMap[jornada.heroImage]
	}))
	.sort((a, b) => b.pubDate.valueOf() - a.pubDate.valueOf());
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
				position: relative;
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child img {
				width: 100%;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}

			/* Estilos para jornadas no disponibles */
			.jornada-unavailable {
				position: relative;
				cursor: not-allowed;
				opacity: 0.7;
			}
			
			.jornada-unavailable img {
				filter: blur(2px) grayscale(20%);
				transition: filter 0.3s ease;
			}
			
			.jornada-unavailable .content {
				filter: blur(0.5px);
			}
			
			.jornada-unavailable::after {
				content: "";
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				bottom: 0;
				background: rgba(0, 0, 0, 0.2);
				border-radius: 12px;
				pointer-events: none;
			}
			
			.coming-soon-badge {
				position: absolute;
				top: 50%;
				left: 50%;
				transform: translate(-50%, -50%);
				background: linear-gradient(135deg, #1e40af 0%, #3b82f6 100%);
				color: white;
				padding: 12px 24px;
				border-radius: 25px;
				font-weight: bold;
				font-size: 1.1em;
				box-shadow: 0 8px 25px rgba(30, 64, 175, 0.4);
				z-index: 10;
				pointer-events: none;
				border: 2px solid rgba(255, 255, 255, 0.3);
				backdrop-filter: blur(10px);
				animation: comingSoonPulse 2s infinite;
			}
			
			.coming-soon-badge::before {
				content: "游늰";
				margin-right: 8px;
			}
			
			@keyframes comingSoonPulse {
				0%, 100% {
					transform: translate(-50%, -50%) scale(1);
					box-shadow: 0 8px 25px rgba(30, 64, 175, 0.4);
				}
				50% {
					transform: translate(-50%, -50%) scale(1.05);
					box-shadow: 0 12px 35px rgba(30, 64, 175, 0.6);
				}
			}
			
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
				.coming-soon-badge {
					font-size: 1em;
					padding: 10px 20px;
				}
			}
			.table {
				text-align: center;
				margin-bottom: 2rem;
			}
			.table-title {
				font-size: 1.5rem;
				margin-bottom: 0.5rem;
				margin-top: 0.5rem;
			}
			.table-img {
				/* width: 100%; */
				border-radius: 12px;
				box-shadow: var(--box-shadow);
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<h2>Estad칤sticas de la temporada:</h2>
			<section>
				<div class="table">
					<h3 class="table-title">Tabla total de temporada</h3>
					<img src={totaltemporada.src} alt="tabla de estad칤sticas totales de temporada" class="table-img"/>
				</div>
				<ul>
					{
						sortedJornadas.map((jornada) => (
							<li class={!jornada.available ? 'jornada-unavailable' : ''}>
								{jornada.available ? (
									<a href={`/jornadas/${jornada.slug}/`}>
										{jornada.heroImage && (
											<Image width={720} height={360} src={jornada.heroImage} alt="" />
										)}
										<div class="content">
											<h4 class="title">{jornada.title}</h4>
											<p class="date">
												<FormattedDate date={jornada.pubDate} />
											</p>
										</div>
									</a>
								) : (
									<div>
										{jornada.heroImage && (
											<Image width={720} height={360} src={jornada.heroImage} alt="" />
										)}
										<div class="content">
											<h4 class="title">{jornada.title}</h4>
											<p class="date">
												<FormattedDate date={jornada.pubDate} />
											</p>
										</div>
										<div class="coming-soon-badge">Pr칩ximamente
											<p style="margin-bottom: 0.2%; margin-top: 0.2%">游뎹 <span>16:00</span></p>
										</div>
									</div>
								)}
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
